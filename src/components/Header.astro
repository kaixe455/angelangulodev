---
import Logo from "@components/Logo.astro";
import MenuButton from "@components/MenuButton.astro";
import SocialNetworks from "@components/SocialNetworks.astro";
import NavbarMobileButton from "@components/navbar/NavbarMobileButton.astro";
---

<header
  class="flex item-center m-auto w-full bg-retro-black py-6 px-4 gap-x-8 md:h-28"
>
  <div class="md:flex md:flex-col md:h-full md:gap-4 w-full justify-between">
    <nav>
      <div class="mx-16">
        <Logo />
      </div>
      <div class="flex md:order-2 justify-center">
        <NavbarMobileButton />
      </div>
      <div>
        <nav
          class="md:rounded-full md:m-auto hidden md:grid"
          id="navbar-sticky"
        >
          <ul class="flex md:flex-row flex-col items-center justify-center">
            <MenuButton text="Home" url="/" />
            <MenuButton text="About" url="about" />
            <MenuButton text="Tech Stack" url="/stack" />
            <MenuButton text="Projects" url="/projects" />
            <MenuButton text="Contact" url="/contact" />
          </ul>
        </nav>
        <SocialNetworks />
      </div>
    </nav>
  </div>
</header>
