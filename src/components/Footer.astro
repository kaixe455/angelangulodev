---
import Container from "@components/Container.astro";
import Logo from "@components/Logo.astro";
import SocialNetworks from "@components/SocialNetworks.astro";
import Separator from "@components/Separator.astro";
---

<footer
  class="page-footer text-white w-full p-8 bg-retro-black overflow-hidden [&>div]:relative [&>div]:z-10 mb-0"
>
  <Container>
    <div class="grid md:grid-cols-3 grid-cols-1">
      <div class="col-span-1 p-10">
        <a href="/">
          <Logo />
        </a>
      </div>
      <div class="col-span-1 p-10">
        <a href="/">
          <span class="text-white font-poppins md:text-xl"
            >angel.angulo.dev@gmail.com</span
          >
        </a>
      </div>
      <div class="col-span-1 p-10">
        <SocialNetworks />
      </div>
    </div>
  </Container>
  <Separator />
  <Container>
    <div class="grid grid-cols-2">
      <div class="col-span-1 p-10">
        <a href="/">
          <nav
            class="flex md:flex-row flex-col lg:flex-row gap-3 md:gap-4 n w-full align-middle items-center md:text-xl text-center"
          >
            <a class="md:opacity-50 hover:opacity-100" href="/">Home</a>
            <a class="md:opacity-50 hover:opacity-100" href="/about">About</a>
            <a class="md:opacity-50 hover:opacity-100" href="/stack"
              >Tech Stack</a
            >
            <a class="md:opacity-50 hover:opacity-100" href="/projects"
              >Projects</a
            >
            <a class="md:opacity-50 hover:opacity-100" href="/contact"
              >Contact</a
            >
          </nav>
        </a>
      </div>
      <div class="col-span-1 p-10 font-poppins">
        <span
          >Designed and built by <span
            class="bg-angel-gradient bg-clip-text text-transparent font-poppinsblack"
            >√Ångel Angulo</span
          > with <span
            class="bg-angel-gradient bg-clip-text text-transparent font-poppinsblack"
            >Love</span
          > & <span
            class="bg-angel-gradient bg-clip-text text-transparent font-poppinsblack"
            >Enthusiasm</span
          ></span
        >
      </div>
    </div>
  </Container>
</footer>
