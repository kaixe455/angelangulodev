---
import Container from "@components/Container.astro";
import Logo from "@components/Logo.astro";
import SocialNetworks from "./SocialNetworks.astro";
---

<footer
  class="page-footer text-white w-full p-8 bg-retro-black overflow-hidden [&>div]:relative [&>div]:z-10 mb-0"
>
  <Container>
    <div class="grid grid-cols-3">
      <div class="col-span-1 p-10">
        <a href="/">
          <Logo />
        </a>
      </div>
      <div class="col-span-1 p-10">
        <a href="/">
          <span class="text-white font-poppins text-xl"
            >development@angelangulo.com</span
          >
        </a>
      </div>
      <div class="col-span-1 p-10">
        <SocialNetworks />
      </div>
    </div>
  </Container>
  <hr
    class="my-12 h-1 border-t-0 bg-transparent bg-gradient-to-r from-transparent via-angelpink to-transparent opacity-25"
  />
  <Container>
    <div class="grid grid-cols-2">
      <div class="col-span-1 p-10">
        <a href="/">
          <nav
            class="flex flex-row lg:flex-row gap-12 md:gap-4 n w-full align-middle items-end"
          >
            <a class="text-xl opacity-50 hover:opacity-100" href="#">Home</a>
            <a class="text-xl opacity-50 hover:opacity-100" href="#">About</a>
            <a class="text-xl opacity-50 hover:opacity-100" href="#"
              >Tech Stack</a
            >
            <a class="text-xl opacity-50 hover:opacity-100" href="#">Projects</a
            >
            <a class="text-xl opacity-50 hover:opacity-100" href="#">Contact</a>
          </nav>
        </a>
      </div>
      <div class="col-span-1 p-10 font-poppins">
        <span
          >Designed and built by <span
            class="bg-angel-gradient bg-clip-text text-transparent font-poppinsblack"
            >√Ångel Angulo</span
          > with <span
            class="bg-angel-gradient bg-clip-text text-transparent font-poppinsblack"
            >Love</span
          > & <span
            class="bg-angel-gradient bg-clip-text text-transparent font-poppinsblack"
            >Enthusiasm</span
          ></span
        >
      </div>
    </div>
  </Container>
</footer>
