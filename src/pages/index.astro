---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import Section from "@components/Section.astro";
import StackCarousel from "@components/StackCarousel.astro";
import ProjectsCarousel from "@components/ProjectsCarousel.astro";
---

<Layout title="Ángel Angulo - Fullstack Developer">
  <main>
    <Container>
      <div class="grid md:grid-cols-2 grid-cols-1 gap-4 text-white">
        <div class="p-10 text-white col-span-1">
          <div class="grid grid-cols-4 gap-4 text-white">
            <div class="col-span-4 p-10 ml-5">
              <h2 class="md:text-5xl text-3xl font-poppins my-4">Hi 👋,</h2>
              <h2 class="md:text-5xl text-3xl font-poppins my-4">
                My name is <span
                  class="bg-angel-gradient bg-clip-text text-transparent font-poppinsblack"
                  >Angel Angulo</span
                >
              </h2>
              <h2 class="md:text-5xl text-3xl font-poppins">
                I build things for web
              </h2>
            </div>
          </div>
        </div>
        <div class="col-span-1 flex items-center justify-center md:p-10 px-10">
          <img
            class="object-scale-down md:h-96 md:w-96 md:rounded-full aspect-square hover:brightness-125 border-4 border-angelpink duration-200"
            src="./images/angel.png"
            alt={`Fotografía animada Angel Angulo`}
          />
        </div>
      </div>
    </Container>
    <Section
      title="My Tech Stack"
      subtitle="Technologies I’ve been working with recently"
    />
    <Container>
      <StackCarousel />
    </Container>
    <Section title="Projects" subtitle="Things I’ve built so far" />
    <Container>
      <ProjectsCarousel />
    </Container>
  </main>
</Layout>
